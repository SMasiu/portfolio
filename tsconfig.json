{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@styles/*": ["./src/styles/*"],
      "@pages/*": ["./src/pages/*"],
      "@icons/*": ["./src/icons/*"],
      "@common/*": ["./src/common/*"],
      "@global-state/*": ["./src/global-state/*"],
      "@hooks/*": ["./src/hooks/*"]
    }
  },
  "include": ["./src/**/*", "custom.d.ts"],
  "exclude": ["node_modules", "build"]
}
